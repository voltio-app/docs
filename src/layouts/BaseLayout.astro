---
import '../styles/global.css';
import { BASE_URL } from '../config';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${BASE_URL}/favicon.svg`} />
    <title>{title} - Voltio App</title>
  </head>
  <body>
    <header class="header">
      <div class="container">
        <a href={BASE_URL} style="display: block;">
          <img
            src={`${BASE_URL}/logo-dark.png`}
            alt="Voltio"
            class="header__logo"
            width="150"
            height="40"
          />
        </a>
      </div>
    </header>
    <main class="container">
      <slot />
    </main>
  </body>
</html>